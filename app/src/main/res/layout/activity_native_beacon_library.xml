<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/native_bluetooth_library"
            android:textColor="#FF000000"
            android:textSize="20dp"
            android:layout_gravity="center"/>

        <FrameLayout
            android:id="@+id/layout_button_fordward"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:background="@drawable/background_on_click_button">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_forward"
                android:layout_gravity="center"/>
        </FrameLayout>
    </FrameLayout>

    <ScrollView
        android:id="@+id/scrollview_beacon_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/header_beacon_list"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_refresh"
                    android:layout_gravity="center"/>
            </FrameLayout>

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@color/transparent"
                android:dividerHeight="5dp"
                android:headerDividersEnabled="false"
                android:footerDividersEnabled="false"
                android:padding="6dp"/>
        </LinearLayout>
    </ScrollView>

